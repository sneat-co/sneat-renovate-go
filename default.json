{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "groupName": "go toolchain",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["golang"],
      "separateMinorPatch": true,
      "separateMultipleMajor": true,
      "automerge": false
    },
    {
      "groupName": "go toolchain patches",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["golang"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "sneat non major deps",
      "groupSlug": "sneat-minor-patch",
      "matchPackagePatterns": [
        "github.com/dal-go/",
        "github.com/strongo/",
        "github.com/sneat-co/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "3d-parties non major deps",
      "groupSlug": "3d-parties-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
